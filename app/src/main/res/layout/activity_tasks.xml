<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_main"
    android:backgroundTint="#b2b2b2"
    android:backgroundTintMode="screen" >

    <LinearLayout
        android:id="@+id/event_header_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/event_header_bg"
        android:elevation="25dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/name_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/events_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="TASKS"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textFontWeight="1000"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_header_container"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/sticker_angkukueh"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sticker_angkukueh_"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/sticker_stones"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sticker_stones"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/sticker_minjiangkueh"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sticker_minjiangkueh"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/sticker_icepops"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sticker_icepops"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/sticker_rabbitsweet"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sticker_rabbitsweet_"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_margin="10dp"/>
    </GridLayout>

</android.support.constraint.ConstraintLayout>
